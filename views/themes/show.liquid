{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <article>
      <h2>
        {{ theme.title }}

      </h2>
      <h3>Background Color:
        {{ theme.backgroundColor }}
      </h3>
      <div class="colorBox" style="background-color: {{theme.backgroundColor}}"></div>
      <h3>Foreground Color:
        {{ theme.foregroundColor }}
      </h3>
      <div class="colorBox" style="background-color: {{theme.foregroundColor}}"></div>
      <h3>Text Color:
        {{ theme.textColor }}
      </h3>
      <div class="colorBox" style="background-color: {{theme.textColor}}"></div>

      {% if theme.owner == userId %}
        <div class="btn-group">

          <a href="/themes/{{ theme.id }}/edit" class="btn btn-primary">Edit</a>
          <form action="/themes/{{ theme.id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn btn-danger">
          </form>
        </div>
      {% endif %}
    </article>
  </div>
{% endblock %}
