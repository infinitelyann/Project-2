{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-sm">
    <form action="/themes" method="POST">
      <fieldset>
        <legend>Create New Theme</legend>
        <label class="form-label">Title:
        </label>
        <input type="text" name="title" placeholder="{{ theme.title }}" value="{{ theme.title }}" class="form-control">
        <label class="form-label">Body:</label>
        <input type="text" name="body" placeholder="{{ theme.body }}" value="{{ theme.body }}" class="form-control">
        <label class="form-label">Amount:</label>
        <input type="number" name="amount" value="{{ theme.amount }}" class="form-control">
        <label class="form-label">Ready:</label>
        <input type="checkbox" name="ready" class="form-check-input"
          {% if theme.ready %}
          checked
          {% endif %}>
      </fieldset>
      <input type="submit" value="Edit Theme" class="btn btn-success">
    </form>
  </div>
{% endblock %}
