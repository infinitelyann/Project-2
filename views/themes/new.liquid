{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-sm">
    <form action="/themes" method="POST">
      <fieldset>
        <legend>Create New Theme</legend>
        <label class="form-label">Title:
        </label>
        <input type="text" name="title" placeholder="enter theme title" class="form-control">
        <label class="form-label">Body:</label>
        <input type="text" name="body" placeholder="enter theme body" class="form-control">
        <label class="form-label">Amount:</label>
        <input type="number" name="amount" class="form-control">
        <label class="form-label">Ready:</label>
        <input type="checkbox" name="ready" class="form-check-input">
      </fieldset>
      <input type="submit" value="Create New Theme" class="btn btn-success">
    </form>
  </div>
{% endblock %}
